<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_graph"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/source_sans_pro"
        android:gravity="center_horizontal|left|center_vertical"
        android:text="See Expense Details"
        android:textColor="@color/BlueNeed"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <Spinner
            android:id="@+id/query_category"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/startblue"
            android:focusedByDefault="true"
            android:layout_weight="1"
            android:textColor="@color/startblue"
            android:textSize="11sp"
            android:layout_gravity="center"
            />
        <Spinner
            android:id="@+id/query_month"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/startblue"
            android:focusedByDefault="true"
            android:layout_weight="1"
            android:textColor="@color/startblue"
            android:textSize="11sp"
            android:layout_gravity="center"/>
    </LinearLayout>


    <Button
        android:id="@+id/buttonPieChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"

        android:background="@drawable/btn_bg"
        android:clickable="true"
        android:fontFamily="@font/source_sans_pro"
        android:onClick="runQuery"
        android:text="Show Graph"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>