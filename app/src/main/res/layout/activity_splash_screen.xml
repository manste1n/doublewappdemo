<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_lay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/BlueNeed"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/splashImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:adjustViewBounds="false"
        android:background="@drawable/newicon2w"
        android:cropToPadding="true" />

    <TextView
        android:id="@+id/textViewSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-80dp"
        android:elegantTextHeight="true"
        android:fontFamily="@font/quicksand"
        android:gravity="center"
        android:padding="50dp"
        android:text="manage your expenses"
        android:textColor="@color/OrangeNeed"
        android:textColorHighlight="@color/OrangeNeed"
        android:textColorLink="@color/OrangeNeed"
        android:textSize="28dp"
        android:textStyle="bold" />
</LinearLayout>