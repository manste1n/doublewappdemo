<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ChooseGroupForExpenseActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/source_sans_pro"
        android:gravity="center_horizontal|left|center_vertical"
        android:text="Choose Group"
        android:textColor="@color/startblue"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/add_expense_group_list"
        android:layout_width="match_parent"
        android:layout_height="454dp"
        android:layout_gravity="clip_vertical|center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

</LinearLayout>